<configuration>
    <appender name="stdout" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} %p[%t] %logger{5} &lt;%m&gt;%n</pattern>
        </encoder>
    </appender>
    <!--<logger name="com.ttpod" level="DEBUG"/>-->
    <root level="INFO">
        <appender-ref ref="stdout"/>
    </root>
</configuration>